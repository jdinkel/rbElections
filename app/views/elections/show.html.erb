<% provide(:title, @election.title) %>

<div class="row">
  <div class="span10 offset1">
    <div id="election-heading">
      <div class="navbar">
        <%= link_to 'Election List', elections_path %> |
        <%= link_to 'Edit', edit_election_path(@election) %>
      </div>
      <h2 id="election-title">
        <%= @election.title %>
      </h2>

      <p id="election-date">
        <%= @election.date.strftime("%A %B #{@election.date.day.ordinalize}, %Y") %>
      </p>

      <p id="election-status">
        <b>Status:</b>
        <%= @election.status.value %>
      </p>
    </div>

    <% @election.races.each do |race| %>
      <div class="race-heading" onclick="location.href='<%= elections_path %>';"  style="cursor:pointer;">
        <h3><%= race.name %></h3>
      </div>
      <table class="table table-condensed table-striped race-table">
        <tr><thead><th>Candidate</th><th>Votes</th></tr></thead>
      <tr></tr>
        <% race.candidates.each do |candidate| %>
          <tr><td class="name"><%= candidate.name %></td><td><%= candidate.cache_votes %></td></tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>